<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="state_machine_buttons">
        <t t-foreach="buttons" t-as="button">
            <button
                type="button"
                t-attf-id="{{ button.id }}"
                t-attf-message="{{ button.message }}"
                class="btn btn-primary ethereum-button-message"
                style="position: relative;"
            >
                <span>
                    <t t-esc="button.name" />
                </span>
            </button>
        </t>
    </t>
</templates>
